@model Musteri

@{
    ViewBag.Title = "UpdateMusteri";
    Layout = "~/Views/_MainLayout.cshtml";
}

    <section class="content-header">
        <h3>Müşteri Güncelle</h3>
        <small class="text-primary">
            <i class="fa fa-info-circle"></i>
            Müşteri Güncelle
        </small>
    </section>

    <section class="content">

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="card card-info">
                    <div class="card-header">
                        <h4 class="card-title">Güncelle</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateMusteriler", "Default", FormMethod.Post))
                        {
                            <input type="hidden" name="MusteriId" value="@Model.MusteriId"/>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Adı</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.Adi" name="Ad" class="form-control" placeholder="Adı..." />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Soyadı</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.Soyadi" name="Soyad" class="form-control" placeholder="Soyadı..." />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Email</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.Email" name="Email" class="form-control" placeholder="Email..." />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Ev Tel</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.EvTel" name="EvTel" class="form-control" placeholder="Ev Tel..." />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Cep Tel</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.CepTel" name="CepTel" class="form-control" placeholder="Cep Tel..." />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Ev Adresi</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.EvAdresi" name="EvAdres" class="form-control" placeholder="Ev Adresi..." />
                                </div>
                            </div>

                            <div class="form-group float-right">
                                <button class="btn btn-dark">Güncelle</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>

    </section>