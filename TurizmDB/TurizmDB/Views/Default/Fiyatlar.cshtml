
@{
    ViewBag.Title = "Fiyatlar";
    Layout = "~/Views/_MainLayout.cshtml";
}

<section class="content-header">
    <h3>Fiyat Ekle</h3>
    <small class="text-primary">
        <i class="fa fa-info-circle"></i>
        Fiyat Ekle
    </small>
</section>


<section class="content">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card card-info">
                <div class="card-header">
                    <h4 class="card-title">Ekle</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AddFiyatlar", "Default", FormMethod.Post))
                    {
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Varış Noktası Id</label>
                            <div class="col-sm-8">
                                <input type="text" name="VarisNoktaId" class="form-control" placeholder="Varış Nokta ID.." />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Araç Id</label>
                            <div class="col-sm-8">
                                <input type="text" name="AracId" class="form-control" placeholder="Araç Id..." />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Fiyat</label>
                            <div class="col-sm-8">
                                <input type="text" name="Fiyat" class="form-control" placeholder="Fiyat..." />
                            </div>
                        </div>

                        <div class="form-group float-right">
                            <button class="btn btn-dark">Ekle</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

</section>

