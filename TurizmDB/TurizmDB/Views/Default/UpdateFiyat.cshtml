@model Fiyatlar 
@{
    ViewBag.Title = "UpdateFiyat";
    Layout = "~/Views/_MainLayout.cshtml";
}

    <section class="content-header">
        <h3>Fiyat Güncelle</h3>
        <small class="text-primary">
            <i class="fa fa-info-circle"></i>
            Fiyat Güncelle
        </small>
    </section>


    <section class="content">

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="card card-info">
                    <div class="card-header">
                        <h4 class="card-title">Güncelle</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateFiyatlar", "Default", FormMethod.Post))
                        {
                            <input type="hidden" name="FiyatId" value="@Model.FiyatId"/>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Varış Noktası Id</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.VarisNoktaId" name="VarisNoktaId" class="form-control" placeholder="Varış Nokta ID.." />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Araç Id</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.AracId" name="AracId" class="form-control" placeholder="Araç Id..." />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Fiyat</label>
                                <div class="col-sm-8">
                                    <input type="text" value="@Model.Fiyat" name="Fiyat" class="form-control" placeholder="Fiyat..." />
                                </div>
                            </div>

                            <div class="form-group float-right">
                                <button class="btn btn-dark">Güncelle</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>

    </section>
