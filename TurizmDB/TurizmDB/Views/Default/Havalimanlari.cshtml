
@{
    ViewBag.Title = "Havalimanlari";
    Layout = "~/Views/_MainLayout.cshtml";
}

<section class="content-header">
    <h3>Havalimanı Ekle</h3>
    <small class="text-primary">
        <i class="fa fa-info-circle"></i>
        Havalimanı Ekle
    </small>
</section>
<section class="content">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card card-info">
                <div class="card-header">
                    <h4 class="card-title">Ekle</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("EkleHavalimani", "Default", FormMethod.Post))
                    {
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Havalimanı Adı</label>
                            <div class="col-sm-8">
                                <input type="text" name="Ad" class="form-control" placeholder="Havalimanı..." />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Şehir</label>
                            <div class="col-sm-8">
                                <input type="text" name="Sehir" class="form-control" placeholder="Şehir..." />
                            </div>
                        </div>
                        <div class="form-group float-right">
                            <button class="btn btn-dark">Ekle</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

</section>
